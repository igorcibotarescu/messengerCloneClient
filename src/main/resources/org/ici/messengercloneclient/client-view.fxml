<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="app_main" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ici.messengercloneclient.Controller"
            prefHeight="396" prefWidth="478">
    <children>
        <Button fx:id="button_send" layoutX="404" layoutY="338" text="Send"/>
        <TextField fx:id="to_send_msg" layoutX="30" layoutY="338" prefWidth="361" prefHeight="26"/>
        <ScrollPane fx:id="scroll_pane" layoutX="30" layoutY="70" prefHeight="256" prefWidth="418" fitToWidth="true">
            <content>
                <VBox fx:id="vbox" prefHeight="248" prefWidth="412"/>
            </content>
        </ScrollPane>
        <Label layoutY="26" layoutX="30" text="Messenger">
            <font>
                <Font name="Arial Rounded MT Bold" size="23"/>
            </font>
        </Label>
    </children>
</AnchorPane>
